{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: App",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "justMyCode": false,
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Pytest: 当前测试文件",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}", "-v", "-s"],
      "justMyCode": false,
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
